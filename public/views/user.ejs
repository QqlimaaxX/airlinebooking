<%include header.ejs%>
<div class="ui container inverted segment">
	<h1>User</h1>
</div>
	<form method="POST" class='ui container form'>
		<% include messages.ejs%>
		<div class="field">
			<label>Password</label>
			<input type="password" name="password" autofocus required placeholder="Password">
		</div>
		
		<div class="equal width fields">
			<div class="field">
				<label>Email</label>
				<input type="email" name="email" required placeholder="Email" value='<%=user.email%>'>
			</div>
			<div class="field">
			<label>Phone Number</label>
			<input type="tel" name="number" pattern="[0-9]{10}" title="Enter Valid Number" required placeholder="Phone Number" value="<%=user.number%>">
		</div>
		</div>
		<button class="ui button blue">Update</button>
	</form>
<%include footer.ejs %>

